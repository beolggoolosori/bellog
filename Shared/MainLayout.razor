@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent Class="main-content">
        <MudAppBar Class="appbar-white" Elevation="0">
            <MudContainer MaxWidth="MaxWidth.Large">
                <MudGrid Justify="Justify.Center">
                    <MudItem xs="6">
                        <MudText Typo="Typo.h6" Color="Color.Dark">김종훈 Bellog</MudText>
                    </MudItem>
                    <MudItem xs="2">
                        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Dark" Href="https://github.com/beolggoolosori" Target="_blank" />
                        <MudIconButton Icon="@Icons.Custom.Brands.Google" Color="Color.Dark" Href="https://github.com/beolggoolosori" Target="_blank" />
                        <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Secondary" aria-label="add to favorite"/>
                    </MudItem>
                </MudGrid>
            </MudContainer>
        </MudAppBar>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="my-16 pt-16 content-area">
          @Body
        </MudContainer>
        <div class="footer">
            <MudText Typo="Typo.body2">© 2023 Bellog</MudText>
        </div>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
